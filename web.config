<?xml version="1.0"?>
<configuration>
    <system.web>
      <customErrors mode="On">
        <error statusCode="404" redirect="/404.html"/>
      </customErrors>
    </system.web>
    <system.webservers>
      <httpErrors errorMode="Custom">
        <clear/>
        <error statusCode="404" path="/404.html" responseMode="Redirect"/>
      </httpErrors>
    </system.webservers>
</configuration>
